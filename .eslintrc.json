{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "parser": "@babel/eslint-parser",
    "extends": [
      "airbnb",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module",
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      }
    },
    "plugins": [
      "react-app",
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "constructor-super": "warn",
      "import/imports-first": [
        "error",
        "absolute-first"
      ],
      "import/newline-after-import": "error",
      "import/no-named-as-default": 0,
      "no-const-assign": "warn",
      "no-extra-semi": "error",
      "no-this-before-super": "warn",
      "no-undef": "warn",
      "no-underscore-dangle": 0,
      "no-unreachable": "warn",
      "no-unused-vars": "warn",
      "prefer-template": "error",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "react/prop-types": 1,
      "valid-typeof": "warn"
    }
}
